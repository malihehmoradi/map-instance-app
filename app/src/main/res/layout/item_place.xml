<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="place"
            type="ir.malihemoradi.mapapplication.data.Place" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/md_grey_300" />

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/md_grey_400"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="1" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="2dp"
                android:text="@{place.name}"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="name name name" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/md_grey_300" />

            <TextView
                android:id="@+id/txt_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="2dp"
                android:text="@{place.code}"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="25634" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/md_grey_300" />

            <TextView
                android:id="@+id/txt_east"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:padding="2dp"
                android:text="@{Double.toString(place.east)}"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="25.6562314" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/md_grey_300" />

            <TextView
                android:id="@+id/txt_north"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:padding="2dp"
                android:text="@{Double.toString(place.north)}"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="56.2356461" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/md_grey_300" />

            <TextView
                android:id="@+id/txt_elevation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:padding="2dp"
                android:text="@{Double.toString(place.elevation)}"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="23.56523" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/md_grey_300" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/md_grey_500" />
    </LinearLayout>
</layout>